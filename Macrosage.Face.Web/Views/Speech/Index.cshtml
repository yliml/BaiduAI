                $('#submit').click(function () {
                    
                    recorder.upload("", {}, function (state, e) {
                        debugger
                        switch (state) {
                            case 'uploading':
                                var percentComplete = Math.round(e.loaded * 100 / e.total) + '%';
                                break;
                            case 'ok':
                                debugger;
                                alert(e.target.responseText);
                                alert('上传成功');
                                break;
                            case 'error':
                                alert('上传失败');
                                break;
                            case 'cancel':
                                alert('上传被取消');
                                break;
                        }
                    });
                })
            },
            methods: {
                startRecord() {
                    var that = this;
                    //wx.startRecord({
